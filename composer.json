{
    "name": "hiroshiaki/datafabric-sdk-php",
    "description": "Official PHP SDK for DataFabric API - KYC verification, maps, routing, and more",
    "type": "library",
    "keywords": ["datafabric", "kyc", "api", "verification", "identity", "sdk", "maps", "routing"],
    "homepage": "https://datafabric.hiroshiaki.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Hiroshi Aki",
            "email": "support@hiroshiaki.com",
            "homepage": "https://hiroshiaki.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://gitlab.hiroshiaki.com:8886/hiroshi-aki/datafabric-sdk-php/-/issues",
        "source": "https://gitlab.hiroshiaki.com:8886/hiroshi-aki/datafabric-sdk-php",
        "docs": "https://datafabric.hiroshiaki.com/docs"
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "DataFabric\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DataFabric\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=max",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
